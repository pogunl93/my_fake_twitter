%html
	%head
		%title Fake Twitter V2
		%link{:href => "/bootstrap.min.css", :type => "text/css", :rel => "stylesheet"}
		%link{:href => "/bootstrap-responsive.min.css", :type => "text/css", :rel => "stylesheet"}
	%body 
		.row
			.span8.offset2
				%h1 Welcome to Fake Twitter
				-if !flash[:notice].nil?
					.alert=flash[:notice]
				%ul.nav.nav-pills 
					%li 
						%a{:href => "/"} Home 
					%li 
						%a{:href => "/users/sign_up"} Sign Up
					%li 
						%a{:href => "/users/sign_in"} Sign In
					%li 
						%a{:href => "/sign_out"} Sign Out 
					%li 
						%a{:href => "/users/profile"} Profile					
			.span10.offset2
				=yield 			